@page 
@using WebApplication1.Areas.Identity.Pages.Account.Manage
@* @model ChangePasswordModel *@

@{
    //ViewData["Title"] = "Setting";
    Layout = "/Pages/_Layout.cshtml";
}

<h1>Settings</h1>

@* Changing Password *@



@* This is the Personal Data *@
<div class="row">
    <div class="col-md-6">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <form id="download-data" asp-page="/Areas/Identity/Pages/Account/Manage/DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-page="/Areas/Identity/Pages/Account/Manage/DownloadPersonalData" class="btn btn-danger">Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
