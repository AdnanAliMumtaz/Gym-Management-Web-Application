    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>

    @section Scripts {
        <script>
            // Explanatory data for the bar graph
            var data = {
                labels: ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
                datasets: [{
                    label: 'Number of Entries',
                    data: [4, 8, 12, 6, 10, 18, 7], // Replace with your actual data
                    backgroundColor: '#FFD803',
                    borderColor: '#FFD803',
                    borderWidth: 1,
                    borderRadius: 12,
                    borderSkipped: false,
                }]
            };

            // Bar graph options
            var options = {
                scales: {
                    x: {
                        type: 'category',
                        position: 'bottom',
                        grid: {
                            display: false,
                        },
                        ticks: {
                            color: 'black'
                        },
                        border: {
                            display: false
                        },
                    },
                    y: {
                        beginAtZero: true,
                        ticks: {
                            display: false
                        },
                        grid: {
                            display: false,
                        },
                        border: {
                            display: false
                        },
                    },
                },
                plugins: {
                    legend: {
                        display: false // Set to false to hide legend
                    }
                },
                indexAxis: 'x', // Set the axis for barPercentage and categoryPercentage
                barPercentage: 0.9, // Adjust the bar width (0.5 means 50% of the available space)
                // categoryPercentage: 0.01 // Adjust the space between bars (0.7 means 70% of the available space)
            };

            // Create bar graph
            var ctx = document.getElementById('entryLogsChart').getContext('2d');
            var entryLogsChart = new Chart(ctx, {
                type: 'bar',
                data: data,
                options: options
            });
        </script>
    }





