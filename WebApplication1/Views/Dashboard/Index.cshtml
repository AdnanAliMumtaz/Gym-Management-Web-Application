    .firstBarGraph {
        margin: 7px 0px;
        background-color: transparent;
        border-radius: 6px;
        height: 100%;
        width: 40%;
        box-shadow: 0 0 8px #525252;
        /* Center the content using flexbox */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .Graph-Canvas {
        /* Set canvas width and height to 100% */
        width: 90%;
        height: 100%;
        /* Additional styling for the canvas */
        border-radius: 6px;
        /* Center content vertically */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

        .Graph-Canvas canvas {
            text-align: center;
            /* Add margin to space out the h2 */
            margin-top: 10px;
        }

