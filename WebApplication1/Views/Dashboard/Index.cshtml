@model WebApplication1.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "/Pages/_Layout.cshtml";
}



<style>
    .dashboard-Background {
        width: 100%;
        margin-top: 2.5%;
        /* margin-left: 2.3%; */
        padding-left: 2.3%;
    }

    .welcome-Dashboard h2 {
        margin-bottom: 0px;
    }

    .welcome-Dashboard p {
        opacity: 0.7;
    }

    .upperDashboardBar {
        height: 20%;
        width: 95%;
        display: flex;
        justify-content: space-between;
        color: #525252;
    }

    .headingDashboard h3{
        font-weight: bolder;
    }

    .BarBox {
        background-color: white;
        width: 30%;
        height: 85px;
        border-radius: 6px;
        box-shadow: 0 0 8px #525252;
        display: flex;
        transition: background 0.5s; /* Use transition on background property */
        position: relative;
        overflow: hidden;

        z-index: 1;    
    }

        .BarBox::before {
            content: '';
            position: absolute;
            top: 0;
            right: 100%; /* Initially position it outside the container on the right */
            width: 100%;
            height: 100%;
            background: linear-gradient(to left, #525252, #525252); /* Solid color */
            transition: right 0.5s; /* Use transition on right property */
            background-size: 200% 100%; /* Double the width of the gradient */
        }

        .BarBox:hover::before {
            right: 0; /* Slide in from the right on hover */
        }

        .BarBox:hover {
            transition: 0.5s;
            color: white;
        }


    .BarBox-Icon {
        z-index: 2;
        width: 30%;
        height: 100%;
        border-radius: 6px;
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 0 8px #525252;
    }

    .BarBox-Icon img {
        width: 45%;
    }

    .BarBox-Values {
        z-index: 2;
        display: grid;
        align-items: center;
        justify-content: center;
        width: 65%;
        text-align: center;
    }

        

    .BarBox-Values h1 {
        margin-top: 8px;
        margin-bottom: 0px;
        font-weight: bold;
    }

    .BarBox-Values p {
        opacity: 0.9;
        border-radius: 5px;
        padding: 0px 5px;
        margin-top: 0px;
        font-weight: bold;
    }


    /*Second Box*/
    .middleLayer-Dashboard {
        /* background-color: blue; */
        height: 300px;
    }

    .firstBarGraph {
        margin: 7px 0px;
        background-color: #525252;
        border-radius: 6px;
        height: 100%;
        width: 40%;
        box-shadow: 0 0 8px #525252;
    }


</style>

