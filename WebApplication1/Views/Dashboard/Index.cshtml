<style>
    .dashboard-Background {
        width: 100%;
        margin-top: 2.5%;
        /* margin-left: 2.3%; */
        padding-left: 2.3%;
    }

    .welcome-Dashboard h2 {
        margin-bottom: 0px;
    }

    .welcome-Dashboard p {
        opacity: 0.7;
    }

    .upperDashboardBar {
        height: 20%;
        width: 95%;
        display: flex;
        justify-content: space-between;
        color: #525252;
    }

    .headingDashboard h3{
        font-weight: bolder;
    }

    .BarBox {
        background-color: white;
        width: 30%;
        height: 85px;
        border-radius: 6px;
        box-shadow: 0 0 8px #525252;
        display: flex;
        transition: background 0.5s; /* Use transition on background property */
        position: relative;
        overflow: hidden;

        z-index: 1;    
    }

        .BarBox::before {
            content: '';
            position: absolute;
            top: 0;
            right: 100%; /* Initially position it outside the container on the right */
            width: 100%;
            height: 100%;
            background: linear-gradient(to left, #525252, #525252); /* Solid color */
            transition: right 0.5s; /* Use transition on right property */
            background-size: 200% 100%; /* Double the width of the gradient */
        }

        .BarBox:hover::before {
            right: 0; /* Slide in from the right on hover */
        }

        .BarBox:hover {
            transition: 0.5s;
            color: white;
        }


    .BarBox-Icon {
        z-index: 2;
        width: 30%;
        height: 100%;
        border-radius: 6px;
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 0 8px #525252;
    }

    .BarBox-Icon img {
        width: 45%;
    }

    .BarBox-Values {
        z-index: 2;
        display: grid;
        align-items: center;
        justify-content: center;
        width: 65%;
        text-align: center;
    }

        

    .BarBox-Values h1 {
        margin-top: 8px;
        margin-bottom: 0px;
        font-weight: bold;
    }

    .BarBox-Values p {
        opacity: 0.9;
        border-radius: 5px;
        padding: 0px 5px;
        margin-top: 0px;
        font-weight: bold;
    }


    /*Second Box*/
    .middleLayer-Dashboard {
        height: 30%;
        width: 100%;
        display: flex;
    }

    .firstBarGraph {
        margin: 7px 0px;
        background-color: transparent;
        border-radius: 6px;
        height: 100%;
        width: 40%;
        box-shadow: 0 0 8px #525252;
        

        display: flex;
        align-items: center;
        justify-content: center;
    }

    .Graph-Canvas {
        width: 90%;
        height: 100%;
        /* Additional styling for the canvas */
        border-radius: 6px;
        /* Center content vertically */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

        .Graph-Canvas canvas {
            text-align: center;
            /* Add margin to space out the h2 */
            margin-top: 10px;
        }

    .text-Design {
        text-align:left;
    }

    .secondBarGraph {
        background-color: white;
        box-shadow: 0 0 8px #525252;
        width: 50%;
        height: 100%;
        border-radius: 6px;
        margin: 7px;
        text-align: right;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

        .secondBarGraph canvas {
            text-align: center;
            margin-top: 10px;
    }

    .lastLayer-Dashboard {
        width: 95%;
        height: 30%;
        background-color: transparent;
        display: flex;
        justify-content: space-between;
    }

    .firstBox {
        width: 30%;
        border-radius: 6px;
        height: 170px;
        background-color: white;
        box-shadow: 0 0 8px #525252;
    }

    .firstBox-Upper {
        height: 50%;
        width: 100%;
        /* background-color: red; */
        display: flex;
    }

    .imageContent {
        height: 100%;
        width: 50%;
        margin: 0 20px;
        /* background-color: yellow; */
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }

    .imageContent h1 {
        margin: 0px;
    }

    .textContent {
        height: 100%;
        width: 30%;
        margin: 0;
        text-align: right;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }

    .textContent h1 {
        margin: 0px;
    }

    .textContentDescription{ 
        margin: 0px;
        margin-right: 20px;
        width: 20%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }

    .textContentDescription p {
        margin: 0px;
    }

    .firstBox-Lower {
        height: 50%;
        width: 100%;
        /* background-color: blue; */
        display: flex;
        /* flex-direction: column;
        justify-content: flex-start; */
    }

    .textContentLower {
        width: 50%;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
    }

    .textContentLower h4 {
        margin: 0;
        margin-left: 20px;
    }

    .textContentDescriptionLower {
        width: 50%;
        text-align: center;
        opacity: 0.6;
    }

    .textContentDescriptionLower p {
        margin: 0px;
        background-color: #FFCC00;
        padding: 3px;
        border-radius: 10px;
    }

</style>

