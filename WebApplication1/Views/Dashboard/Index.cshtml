    .BarBox {
        background-color: white;
        width: 30%;
        height: 90px;
        border-radius: 6px;
        box-shadow: 0 0 8px #525252;
        display: flex;
        transition: background 0.5s; /* Use transition on background property */
        position: relative;
        overflow: hidden;

        z-index: 1;    
    }

        .BarBox::before {
            content: '';
            position: absolute;
            top: 0;
            right: 100%; /* Initially position it outside the container on the right */
            width: 100%;
            height: 100%;
            background: linear-gradient(to left, #525252, #525252); /* Solid color */
            transition: right 0.5s; /* Use transition on right property */
            background-size: 200% 100%; /* Double the width of the gradient */
        }

        .BarBox:hover::before {
            right: 0; /* Slide in from the right on hover */
        }








        


    .BarBox-Icon {
        z-index: 2;
        width: 30%;
        height: 100%;
        border-radius: 6px;
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;

        box-shadow: 0 0 8px #525252;
    }

    .BarBox-Icon img {
        width: 45%;
    }

    .BarBox-Values {
        z-index: 2;
        color: #525252;
        display: grid;
        align-items: center;
        justify-content: center;
        width: 65%;
        text-align: center;
    }

        .BarBox-Values:hover {
