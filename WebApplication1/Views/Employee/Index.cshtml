@* @model IEnumerable<WebApplication1.Models.ConnectionRequest> *@

@using WebApplication1.Models;
@model IEnumerable<ConnectionRequest> // Change the model type

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Sender ID</th>
            <th>Receiver ID</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.Id</td>
                <td>@request.SenderId</td>
                <td>@request.ReceiverId</td>
                <td>@request.Status</td>

                <td>
                    <form asp-controller="ConnectionRequests" asp-action="AcceptRequest" method="post">
                        <input type="hidden" name="receiverId" value="@request.SenderId" />
                        <button type="submit" class="btn btn-primary">Accept Request</button>
                    </form>
                </td>

                <td>

                    <form asp-controller="ConnectionRequests" asp-action="RejectRequest" method="post">
                        <input type="hidden" name="receiverId" value="@request.Id" />
                        <button type="submit" class="btn btn-danger">Reject Request</button>
                    </form>

                    @* <form asp-controller="ConnectionRequests" asp-action="WithdrawRequest" method="post">
                        <input type="hidden" name="requestId" value="@request.Id" />
                        <button type="submit" class="btn btn-danger">Withdraw Request</button>
                    </form> *@
                </td>
            </tr>
        }
    </tbody>
</table>
