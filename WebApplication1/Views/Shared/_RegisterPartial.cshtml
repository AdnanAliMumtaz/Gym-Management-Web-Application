@using WebApplication1.Areas.Identity.Pages.Account
@model RegisterModel

<style> 


    * {
        font-family: 'Montserrat', sans-serif;
    }

    .login-form h1 {
        line-height: 130%;
    }

    .form-floating {
        padding-bottom: 25px;
        width: 60%;
    }

    input.form-control {
        background-color: #ECECEC;
    }

    .form-floating input.form-control:focus {
        border: 2px solid #304D70;
    }

    .login-Button {
        background-color: #304D70;
        padding-top: 1%;
        padding-bottom: 1%;
        padding-left: 7%;
        padding-right: 7%;
        border: solid 0px #304D70;
        border-radius: 5px;
        transition: 0.5s;
        margin-bottom: 30px;
    }

        .login-Button:hover {
            box-shadow: 0 0 10px #304D70;
        }

    .checkbox input.form-check-input {
        border-color: white;
    }

        .checkbox input.form-check-input:checked {
            background-color: #304D70;
            border-color: #304D70;
        }

        .checkbox input.form-check-input:focus {
            box-shadow: 0 0 10px #304D70;
        }



</style>


<form id="registerForm" method="post" action="~/Identity/Account/Register">
    <h2><b>Sign Up</b></h2>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" />
                <label asp-for="Input.FirstName">First Name</label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" />
                <label asp-for="Input.LastName">Last Name</label>
            </div>
        </div>
    </div>
    <div class="form-floating">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Input.Email"></label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="Input.Password"></label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="Input.ConfirmPassword"></label>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>


   @*  <div class="form-floating ">
        <select asp-for="Input.Role" class="form-select" asp-items aria-required="true">
            <option disabled selected>Select Role</option>
        </select>
        <span asp-validation-for="Input.Role" class="text-danger"></span>
    </div> *@

    <button id="registerSubmit" type="submit" class="login-Button"><b>Register</b></button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


