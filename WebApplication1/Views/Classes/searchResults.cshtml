@model List<Classes>

<style>
    /* CSS for each box */
    .box {
        width: calc(25% - 20px); /* Adjust width to fit four boxes per row */
        background-color: white;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px 2px rgba(0, 0, 0, 0.05);
        height: 250px;
    }

    /* Flex container */
    .flex-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between; /* Distribute space between flex items */
        height: 500px; /* Set a fixed height */
        overflow-y: auto; /* Enable vertical scrolling */
    }
    /* CSS for the scrollbar */
    .flex-container {
        scrollbar-width: thin; /* Set the width of the scrollbar */
        scrollbar-color: #304D70 transparent; /* Set the color of the scrollbar (optional) */
    }


    /* Clearfix to clear floats */
    .clearfix::after {
        content: "";
        display: table;
        clear: both;
    }

    /* CSS for actions */
    .actions {
        margin-top: 10px;
    }
</style>

<div class="flex-container">
    @if (Model != null && Model.Any())
    {
        @foreach (var resource in Model)
        {
            <div class="box ">
                @* <p><strong>Class ID:</strong> @resource.ClassID</p> *@
                <h3><strong>@resource.ClassName</strong></h3>
                <p>@resource.Description</p>
                <p>@resource.Date.ToString("dd MMMM yyyy")</p>
                <p> @(resource.Duration.Hours) hour @(resource.Duration.Minutes) minutes</p>

                <div class="actions">
                    <a asp-controller="Classes" asp-action="Edit" asp-route-id="@resource.ClassID">Edit</a>
                    <a asp-action="Delete" asp-route-id="@resource.ClassID">Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <p>No classes found.</p>
    }
</div>
